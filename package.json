{
  "name": "node-red-contrib-things",
  "version": "2.4.5",
  "description": "A set of Node-RED nodes that uses an agnostic state management system to keep IOT device states and provide a uniform control system.",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start node-red --watch && pm2 log",
    "stop": "pm2 stop node-red"
  },
  "author": "hufftheweevil",
  "license": "MIT",
  "node-red": {
    "nodes": {
      "setup": "red/setup.js",
      "update": "red/update.js",
      "trigger": "red/trigger.js",
      "get": "red/get.js",
      "test": "red/test.js",
      "list": "red/list.js",
      "command": "red/command.js",
      "process": "red/process.js"
    }
  },
  "keywords": [
    "node-red",
    "iot",
    "state management"
  ],
  "homepage": "https://github.com/hufftheweevil/node-red-contrib-things",
  "repository": "github:hufftheweevil/node-red-contrib-things",
  "dependencies": {
    "ws": "^7.3.1"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=3"
  }
}
